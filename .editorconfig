# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[**.{css,html,js,json,ts}]
indent_style = space
indent_size = 4

[**/package.json]
indent_size = 2

[**/tsconfig.json]
indent_size = 2

[**/tslint.json]
indent_size = 2
